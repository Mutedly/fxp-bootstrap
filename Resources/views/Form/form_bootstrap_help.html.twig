{% block help_text -%}
    {%- if help_text is not empty -%}
        {%- set help_attr = help_attr|default({})|merge({'class': ('help-block ' ~ (help_attr.class|default('')))|trim}) -%}

        <span{% for attrname, attrvalue in help_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>{{ help_text|raw }}</span>
    {%- endif -%}
{%- endblock help_text %}
