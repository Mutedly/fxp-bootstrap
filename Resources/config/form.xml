<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="form.type_extension.sonatra_form" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\FormExtension">
            <tag name="form.type_extension" alias="form" />
        </service>

        <service id="form.type_extension.sonatra_money" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\MoneyExtension">
            <tag name="form.type_extension" alias="money" />
        </service>

        <service id="form.type_extension.sonatra_email" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\EmailExtension">
            <tag name="form.type_extension" alias="email" />
        </service>

        <service id="form.type_extension.sonatra_url" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\UrlExtension">
            <tag name="form.type_extension" alias="url" />
        </service>

        <service id="form.type_extension.sonatra_collection" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\CollectionExtension">
            <tag name="form.type_extension" alias="collection" />
            <argument type="service" id="form.factory" />
        </service>

        <service id="form.type_extension.sonatra_button" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\ButtonExtension">
            <tag name="form.type_extension" alias="button" />
        </service>

        <service id="form.type_extension.sonatra_addon" class="Sonatra\Bundle\BootstrapBundle\Form\Extension\AddonExtension">
            <tag name="form.type_extension" alias="form" />
        </service>
    </services>
</container>
