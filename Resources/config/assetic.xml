<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_bootstrap.assetic.font_loader.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Loader\FontLoader</parameter>
        <parameter key="sonatra_bootstrap.assetic.font_resource.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Resource\FontResource</parameter>
        <parameter key="sonatra_bootstrap.assetic.config_loader.class">Symfony\Bundle\AsseticBundle\Factory\Loader\ConfigurationLoader</parameter>
        <parameter key="sonatra_bootstrap.assetic.config_resource.class">Symfony\Bundle\AsseticBundle\Factory\Resource\ConfigurationResource</parameter>
        <parameter key="sonatra_bootstrap.assetic.font_paths" type="collection"></parameter>
        <parameter key="sonatra_bootstrap.assetic.font_output"></parameter>
    </parameters>

    <services>
        <service id="sonatra_bootstrap.assetic.font_loader" class="%sonatra_bootstrap.assetic.font_loader.class%">
            <tag name="assetic.formula_loader" alias="sonatra_bootstrap_font" />
            <argument>%sonatra_bootstrap.assetic.font_output%</argument>
        </service>

        <service id="sonatra_bootstrap.assetic.font_resource" class="%sonatra_bootstrap.assetic.font_resource.class%">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_font" />
            <argument>%sonatra_bootstrap.assetic.font_paths%</argument>
        </service>

        <service id="sonatra_bootstrap.assetic.config_loader" class="%sonatra_bootstrap.assetic.config_loader.class%" public="false">
            <tag name="assetic.formula_loader" alias="sonatra_bootstrap_config" />
        </service>

        <service id="sonatra_bootstrap.assetic.config_resource" class="%sonatra_bootstrap.assetic.config_resource.class%" public="false">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_config" />
            <argument type="collection" /> <!-- configured formulae -->
        </service>
    </services>
</container>
