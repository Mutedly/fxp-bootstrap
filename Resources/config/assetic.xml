<?xml version="1.0" encoding="UTF-8"?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="sonatra_bootstrap.assetic.font_loader.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Loader\FontLoader</parameter>
        <parameter key="sonatra_bootstrap.assetic.config_loader.class">Symfony\Bundle\AsseticBundle\Factory\Loader\ConfigurationLoader</parameter>

        <parameter key="sonatra_bootstrap.assetic.font_resource.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Resource\FontResource</parameter>
        <parameter key="sonatra_bootstrap.assetic.common_stylesheets_resource.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Resource\CommonStylesheetsResource</parameter>
        <parameter key="sonatra_bootstrap.assetic.common_javascripts_resource.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Resource\SingleConfigurationResource</parameter>
        <parameter key="sonatra_bootstrap.assetic.hack_lt_ie_9_resource.class">Sonatra\Bundle\BootstrapBundle\Assetic\Factory\Resource\SingleConfigurationResource</parameter>

        <parameter key="sonatra_bootstrap.assetic.parameter_bag_filter.class">Sonatra\Bundle\BootstrapBundle\Assetic\Filter\ParameterBagFilter</parameter>
        <parameter key="sonatra_bootstrap.assetic.path_relative_filter.class">Sonatra\Bundle\BootstrapBundle\Assetic\Filter\PathRelativeFilter</parameter>

        <parameter key="sonatra_bootstrap.builder.stylesheet.class">Sonatra\Bundle\BootstrapBundle\Builder\StylesheetBuilder</parameter>
        <parameter key="sonatra_bootstrap.assetic.font_output"></parameter>
    </parameters>

    <services>
        <service id="sonatra_bootstrap.assetic.font_loader" class="%sonatra_bootstrap.assetic.font_loader.class%" public="false">
            <tag name="assetic.formula_loader" alias="sonatra_bootstrap_font" />
            <argument>%sonatra_bootstrap.assetic.font_output%</argument>
        </service>

        <service id="sonatra_bootstrap.assetic.config_loader" class="%sonatra_bootstrap.assetic.config_loader.class%" public="false">
            <tag name="assetic.formula_loader" alias="sonatra_bootstrap_config" />
        </service>

        <service id="sonatra_bootstrap.assetic.font_resource" class="%sonatra_bootstrap.assetic.font_resource.class%" public="false">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_font" />
            <argument type="collection" />
        </service>

        <service id="sonatra_bootstrap.assetic.common_stylesheets_resource" class="%sonatra_bootstrap.assetic.common_stylesheets_resource.class%" public="false">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_config" />
            <argument>sonatra_bootstrap_common_stylesheets</argument>
            <argument type="collection" />
            <argument type="collection" />
            <argument type="collection" />
            <argument type="service" id="sonatra_bootstrap.builder.stylesheet" on-invalid="null" />
        </service>

        <service id="sonatra_bootstrap.assetic.common_javascripts_resource" class="%sonatra_bootstrap.assetic.common_javascripts_resource.class%" public="false">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_config" />
            <argument>sonatra_bootstrap_common_javascripts</argument>
            <argument type="collection" />
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <service id="sonatra_bootstrap.assetic.hack_lt_ie_9_resource" class="%sonatra_bootstrap.assetic.hack_lt_ie_9_resource.class%" public="false">
            <tag name="assetic.formula_resource" loader="sonatra_bootstrap_config" />
            <argument>sonatra_bootstrap_head_hack_lt_ie_9</argument>
            <argument type="collection" />
            <argument type="collection" />
            <argument type="collection" />
        </service>

        <service id="sonatra_bootstrap.assetic.parameter_bag_filter" class="%sonatra_bootstrap.assetic.parameter_bag_filter.class%">
            <tag name="assetic.filter" alias="parameterbag"></tag>
            <argument type="service" id="service_container" />
        </service>

        <service id="sonatra_bootstrap.assetic.path_relative_filter" class="%sonatra_bootstrap.assetic.path_relative_filter.class%">
            <tag name="assetic.filter" alias="relative"></tag>
        </service>

        <service id="sonatra_bootstrap.builder.stylesheet" class="%sonatra_bootstrap.builder.stylesheet.class%" public="false">
            <argument />
            <argument />
            <argument type="collection" />
        </service>
    </services>
</container>
